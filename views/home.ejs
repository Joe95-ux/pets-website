<%- include("partials/header") %>
<section id="header">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../images/header-imguse1.jpg" class="header-image" alt="..." />
        <div class="carousel-caption d-md-block">
          <h1 class="heading">welcome to St. Benard puppies!</h1>
          <p class="header-note">
            Home to beautiful
            <span class="breed">golden retriever puppies</span>.
          </p>
          <a href="#our-puppies" class="find-btn" role="button"><i class="paw fas fa-paw"></i>find a puppy<i
              class="paw fas fa-paw"></i></a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="../images/header-imguse2.jpg" class="header-image" alt="..." />
        <div class="carousel-caption d-md-block">
          <h5>
            "the love of a dog is a pure thing. he gives you a trust which is
            total. you must not betray it."
          </h5>
          <h7 class="quote-author">michel houellebecq</h7>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://www.thesprucepets.com/thmb/bzdiSVEaF7gjQ_GKtKprxKnqOtE=/2124x1195/smart/filters:no_upscale()/GoldenPuppy185743593-56a9c1f23df78cf772aa4a33.jpg" class="header-image" alt="..." />
        <div class="carousel-caption d-md-block">
          <h4 class="short-par">
            in need of a beautiful puppy to make life at home even happier? we
            are here to grant you your wish!
          </h4>

          <a href="#our-puppies" class="find-btn" role="button"><i class="paw fas fa-paw"></i>find a puppy<i
              class="paw fas fa-paw"></i></a>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

<!--our puppies-->

<section id="our-puppies">
  <div class="wrapper-enclosure">
    <div class="section-title">
      <h2>our beautiful puppies</h2>
      <hr class="section-rule home-rule" />
      <p>
        It is our profound pleasure to present to you these beautiful golden
        retriever puppies. Feel free to click on any of the images to find out
        more.
      </p>
    </div>
    <div class="puppies-center">
      <% for(let i = 0; i < allPuppies.length; i++){ %>

      <article class="single-puppy">
        <div class="img-container">
          <img src=../uploads/images/<%= allPuppies[i].img%> alt=<%= allPuppies[i].name %> class="puppy-img">
          <a class="buy-me" type="button" href="/puppies/<%=allPuppies[i].name%>"><i class="fas fa-paw"></i>Buy me</a>
        </div>
        <div class="about-puppy">
          <h3 class="name"><%= allPuppies[i].name %></h3>
          <hr class="product-rule" />
          <h4 class="description">
            <span><%= allPuppies[i].sex %>, </span><%= allPuppies[i].age %> old
          </h4>
        </div>
      </article>

      <% }; %>
    </div>
  </div>


</section>

